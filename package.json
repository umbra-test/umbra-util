{
  "name": "umbra-util",
  "version": "0.0.1",
  "description": "",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "watch-build": "(tsc -w &) && (tsc -w -p tsconfig-test.json)",
    "test": "tsc -p tsconfig-test.json && nyc mocha --reporter dot --require ts-node/register --require source-map-support/register --recursive tst/**/*.ts",
    "lint": "tslint --project .",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "all": "npm run build && npm run test && npm run lint && npm run coveralls"
  },
  "nyc": {
    "lines": 100,
    "statements": 99,
    "functions": 96,
    "branches": 96,
    "cache": false,
    "check-coverage": true,
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov",
      "html"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/mocha": "^7.0.2",
    "@types/sinon": "^7.5.2",
    "@types/sinon-chai": "^3.2.3",
    "@types/source-map-support": "^0.5.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.9",
    "mocha": "^7.1.0",
    "nyc": "^15.0.0",
    "sinon": "^9.0.1",
    "sinon-chai": "^3.5.0",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.6.2",
    "tslint": "^6.1.0",
    "typescript": "^3.8.3"
  }
}
