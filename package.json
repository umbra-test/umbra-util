{
  "name": "@umbra-test/umbra-util",
  "version": "0.0.4",
  "description": "A collection of common utils used by the Umbra Test packages.",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "npx tsc",
    "watch-build": "(npx tsc -w &) && (npx tsc -w -p tsconfig-test.json)",
    "test": "npx tsc -p tsconfig-test.json && nyc mocha --require source-map-support/register --recursive lib/tests/tst/**/*.js",
    "lint": "tslint --project .",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "all": "npm run build && npm run test && npm run lint && npm run coveralls"
  },
  "nyc": {
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "cache": true,
    "check-coverage": true,
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "tst",
      "coverage"
    ],
    "reporter": [
      "text",
      "lcov",
      "html"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.0",
    "@types/sinon": "^7.5.2",
    "@types/sinon-chai": "^3.2.3",
    "@types/source-map-support": "^0.5.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.9",
    "mocha": "^7.1.0",
    "nyc": "^15.0.0",
    "sinon": "^9.0.1",
    "sinon-chai": "^3.5.0",
    "source-map-support": "^0.5.16",
    "tslint": "^6.1.0",
    "typescript": "^3.9.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/umbra-test/umbra-util.git"
  },
  "author": "umbra-test authors",
  "bugs": {
    "url": "https://github.com/umbra-test/umbra-util/issues"
  },
  "homepage": "https://github.com/umbra-test/umbra-util#readme"
}
